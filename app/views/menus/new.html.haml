%h1 Create a new menu

= form_for @menu, :html => {:class => 'menu'} do |f|
  = render_errors_for @menu

  %p
    = f.label :date
    = f.date_select :date

  #bulk_menu_creation
    = label_tag :bulk, 'Bulk menu creation'
    = text_area_tag :bulk

  = f.fields_for :dishes do |dish|
    = render :partial => "dish", :object => dish

  #menu-item-for-cloning
    = fields_for 'menu[dishes_attributes][randomizer]', Dish.new do |dish|
      = render :partial => "dish", :object => dish

  %p= link_to 'Add menu item', '#', :class => 'add-menu-item'

  %p= f.submit

