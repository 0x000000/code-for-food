%h1= "Заказы на <span>#{@menu}</span>".html_safe
%table.orders
  %thead
    %tr
      %th Имя
      %th Заказ
      %th Итого
  %tfoot
    %tr
      %td.total-text{:colspan => 2} Итого:
      %td= number_with_delimiter @orders.sum(:price)
  %tbody
    - @orders.each do |order|
      %tr
        %td= order.user
        %td= order.dishes.map{ |d| "#{d.name} (#{d.total_price})" }.join(', ')
        %td= number_with_delimiter order.price

= link_to 'Редактировать меню', edit_menu_path(@menu), :class => 'button'

