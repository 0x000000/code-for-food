%h1 Вход

= form_for @user_session, :url => login_path, :html => { :id => 'login' } do |f|
  = render_errors_for @user_session
  .field= f.text_field :email, :placeholder => 'Почта'
  .field= f.password_field :password, :placeholder => 'Пароль', :id => nil
  .field
    = f.check_box :remember_me
    = f.label :remember_me, 'Запомнить меня'
  .field
    = f.submit "Войти"
    = link_to 'Забыл пароль?', new_password_reset_path, :class => 'forgot-password'
    .clr

