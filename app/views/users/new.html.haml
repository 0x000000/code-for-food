%h1 Register

= form_for @user, :url => do_registration_path do |f|
  = render_errors_for @user
  = f.hidden_field :invitation_token
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :password_confirmation
    = f.text_field :password_confirmation
  .field
    = f.submit 'Register'

