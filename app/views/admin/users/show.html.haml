.box
  .box-head
    %h2= "#{@user} | Сумма всех заказов: #{number_with_delimiter @user.orders.total}"
  %table.defaults
    - @orders.each do |order|
      %tr
        %td= order.menu
        %td= order.price

  .buttons
    = link_to 'К списку пользователей', admin_users_path, :class => 'button'

