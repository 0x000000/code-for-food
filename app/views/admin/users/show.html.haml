%h1
  Заказы пользователя
  %span= @user
  = "| Сумма всех заказов - #{number_with_delimiter @user.orders.total}"
%table.defaults
  %thead
    %tr
      %th Дата заказа
      %th Сумма
  - @orders.each do |order|
    %tr
      %td= order.menu
      %td= number_with_delimiter order.price

%hr
= link_to 'К списку пользователей', admin_users_path, :class => 'button'

